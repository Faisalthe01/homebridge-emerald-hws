{
  "pluginAlias": "EmeraldHws",
  "pluginType": "platform",
  "name": "EmeraldHws",

  "headerDisplay": "Configuration for the Emerald Heat Pump Hot Water System plugin.",
  "footerDisplay": "Ensure Python and emerald_hws_py are installed on your Homebridge server.",

  "schema": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "title": "Emerald account email"
      },
      "password": {
        "type": "string",
        "title": "Emerald account password"
      },
      "pythonPath": {
        "type": "string",
        "title": "Python executable path",
        "default": "python3"
      },
      "pollInterval": {
        "type": "number",
        "title": "Poll interval (seconds)",
        "default": 60,
        "minimum": 15
      }
    },
    "required": ["email", "password"]
  }
}
